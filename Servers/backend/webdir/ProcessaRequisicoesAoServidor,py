import sys

def main():
  # Verifica se há pelo menos um argumento além do nome do script
    if len(sys.argv) > 1:
        primeiro_parametro = sys.argv[1]
        
    else:
        print("Nenhum parâmetro fornecido.")   
        quit()
   
# Este bloco verifica se o script está sendo executado diretamente
if __name__ == "__main__":
    main()  